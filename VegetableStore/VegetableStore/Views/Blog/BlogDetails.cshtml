@model VegetableStore.Models.ViewModels.DetailViewModel
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var blog = Model.Blog;
}

<h2>BlogDetails</h2>

<div class="blog_details_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                    <div class="blog_details_info">
                        <h3>@blog.Title</h3>
                        <div class="blog_details_img">
                            <img src="@blog.Image" style=" display: block; margin-left: auto; margin-right: auto; width:50%" alt="">
                        </div>
                        <div class="post_excerpt">
                            <p>@blog.Content</p>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>