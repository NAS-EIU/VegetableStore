@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!-- Breadcrumbs -->

<div class="breadcrumb_container ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <nav>
                    <ul>
                        <li>
                            <a href="/">Trang chủ ></a>
                        </li>
                        <li>Tạo tài khoản</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="page_login_section">
        <div class="container">
            <div class="page-content">
                <div class="account-login">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="register_page_form">
                                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                    <div class="row">
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Họ tên:</label>
                                            <div class="input-text">
                                                <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Email:</label>
                                            <div class="input-text">
                                                <input type="text" asp-for="Email" name="email" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Tên người dùng:</label>
                                            <div class="input-text">
                                                <input type="text" asp-for="UserName" name="userName" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Mật khẩu:</label>
                                            <div class="input-text">
                                                <input type="password" asp-for="Password" name="password" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Xác nhận mật khẩu:</label>
                                            <div class="input-text">
                                                <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Ngày sinh:</label>
                                            <div class="input-text">
                                                <input type="date" asp-for="BirthDay" name="birthDay" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Số điện thoại:</label>
                                            <div class="input-text">
                                                <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-6 col-md-6">
                                            <label>Địa chỉ:</label>
                                            <div class="input-text">
                                                <input type="text" name="address" asp-for="Address" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="submit-text">
                                            <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Tạo tài khoản</span></button>
                                        </div>
                                    </div>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />

}
