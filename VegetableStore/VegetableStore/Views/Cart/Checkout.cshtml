@model CheckoutViewModel
@inject UserManager<AppUser> UserManager
@{
    ViewData["Title"] = "Checkout";
    var user = UserManager.Users.First(x => x.UserName == UserManager.GetUserName(User));

}
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<!-- Breadcrumbs -->
<div class="breadcrumb_container ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <nav>
                    <ul>
                        <li>
                            <a href="/">Home ></a>
                        </li>
                        <li>checkout</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!--breadcrumb area end-->
<!--Checkout page section-->
<div class="Checkout_page_section">
    @if (UserManager.GetUserName(User) != null)
    {
        <div class="container">
            @if (ViewData["Success"] != null)
            {
                if ((bool)ViewData["Success"] == true)
                {
                    <div class="alert alert-success">
                        Thank you for your order. We are going to confirm your order soon.
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        Have an error in order progress. Please contact to administrator.
                    </div>
                }
            }
            else
            {
                <form action="/checkout.html" method="post">
                    <div class="checkout-form">
                        <div class="row">
                            @
                            <div class="col-lg-6 col-md-6">
                                <div>
                                    <h3>Billing Details</h3>
                                    <div class="row">

                                        <div class="col-12 mb-30">
                                            <label for="b_f_name">Full Name <span>*</span></label>
                                            <input id="b_f_name" type="text" asp-for="CustomerName" value="@user.FullName">
                                        </div>

                                        <div class="col-12 mb-30">
                                            <label for="b_f_address">Address <span>*</span></label>
                                            <input id="b_f_address" type="text" asp-for="CustomerAddress" value="@user.Address">
                                        </div>
                                        <div class="col-lg-6 mb-30">
                                            <label for="b_email">Email Address</label>
                                            <input id="b_email" type="text" value="@user.Email">
                                        </div>
                                        <div class="col-lg-6 mb-30">
                                            <label>Phone   <span>*</span></label>
                                            <input placeholder="Phone Number" type="text" asp-for="CustomerMobile" value="@user.PhoneNumber">
                                        </div>
                                        <div class="col-12">
                                            <div class="order-notes">
                                                <label for="order_note">Order Notes</label>
                                                <textarea id="order_note" type="text" asp-for="CustomerMessage"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">

                                <div class="order-wrapper">
                                    <h3>Your order</h3>
                                    <div class="order-table table-responsive mb-30">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th class="product-name">Product</th>
                                                    <th class="product-total">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Carts)
                                                {
                                                    <tr>
                                                        <td class="product-name">@ <strong> × @</strong></td>
                                                        <td class="amount"> $@( )</td>
                                                    </tr>
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Cart Subtotal</th>
                                                    <td>$@</td>
                                                </tr>
                                                <tr>
                                                    <th>Order Total</th>
                                                    <td><strong>$@</strong></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="payment-method">
                                        @for (int i = 0; i < Model.PaymentMethods.Count(); i++)
                                        {
                                            <div class="panel-default">
                                                <label class="righ_10" asp-for="@Model.PaymentMethods[i].Value">
                                                    <input type="radio" name="paymentMethod" asp-for="PaymentMethod" value="@Model.PaymentMethods[i].Value">
                                                    @
                                                </label>
                                            </div>

                                        }
                                        <div class="order-button">
                                            <button type="submit" class="button pull-right">Place order</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    }
    else
    {
        <div class="alert alert-success">
            Hãy đăng nhập
        </div>
    }

</div>
